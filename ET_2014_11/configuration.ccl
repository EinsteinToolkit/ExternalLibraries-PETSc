# Configuration definitions for thorn PETSc

REQUIRES BLAS LAPACK MPI

PROVIDES PETSc
{
  SCRIPT configure.sh
  LANG bash
  OPTIONS PETSC_DIR PETSC_ARCH PETSC_ARCH_LIBS PETSC_BLAS_EXTRA_LIB_DIRS PETSC_BLAS_EXTRA_LIBS PETSC_LAPACK_EXTRA_LIB_DIRS PETSC_LAPACK_EXTRA_LIBS PETSC_MPI_EXTRA_LIB_DIRS PETSC_MPI_EXTRA_LIBS PETSC_INSTALL_DIR
}
